<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox alignment="CENTER" spacing="8.0">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
            <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Struggle for Life" textAlignment="CENTER">
                <font>
                    <Font size="24.0" />
                </font>
            </Text>
            <Separator prefWidth="0.0" />
            <HBox spacing="8.0">
                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="ALWAYS" minViewportHeight="529.0" minViewportWidth="529.0" pannable="true" prefViewportHeight="529.0" prefViewportWidth="529.0" vbarPolicy="ALWAYS">
                    <StackPane>
                        <Canvas fx:id="screen" nodeOrientation="INHERIT">
                            <cursor>
                                <Cursor fx:constant="CROSSHAIR" />
                            </cursor>
                        </Canvas>
                        <Canvas fx:id="overlay" nodeOrientation="INHERIT" onMouseClicked="#onOverlayMouseClicked">
                            <cursor>
                                <Cursor fx:constant="CROSSHAIR" />
                            </cursor>
                        </Canvas>
                    </StackPane>
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem fx:id="placeMarker" mnemonicParsing="false" onAction="#putMarker" text="Poser une balise" />
                                <MenuItem fx:id="eraseMarker" mnemonicParsing="false" onAction="#delMarker" text="Retirer la balise" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem fx:id="regenAutomaton" mnemonicParsing="false" onAction="#regenAutomaton" text="RÃ©parer automate" />
                            </items>
                        </ContextMenu>
                    </contextMenu>
                </ScrollPane>
                <Separator orientation="VERTICAL" />
                <Pane>
                    <GridPane alignment="CENTER_LEFT" hgap="4.0">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" />
                            <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        </rowConstraints>
                        <Label text="Joueur :" GridPane.rowIndex="2" />
                        <ChoiceBox fx:id="playersBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Separator GridPane.columnSpan="2" GridPane.rowIndex="1" />
                        <Label text="Personnages :" GridPane.rowIndex="4" />
                        <Label fx:id="populationsLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="Gradient total :" GridPane.rowIndex="5" />
                        <Label fx:id="totalGradientLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <Label text="Gradient moyen" GridPane.rowIndex="6" />
                        <Label fx:id="meanGradientLabel" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        <Label text="Tour :" />
                        <Label fx:id="ticksLabel" text="N/A" GridPane.columnIndex="1" />
                        <Label text="Couleur :" GridPane.rowIndex="3" />
                        <Canvas fx:id="colorCanvas" height="16.0" width="16.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Button mnemonicParsing="false" text="Aller sur l'automate" GridPane.columnSpan="2" GridPane.rowIndex="8" />
                    </GridPane>
                </Pane>
            </HBox>
            <Separator layoutX="18.0" layoutY="62.0" prefWidth="0.0" />
        </VBox>
    </center>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="Fichier">
                <MenuItem mnemonicParsing="false" text="Nouveau" />
                <MenuItem mnemonicParsing="false" text="Charger" />
                <MenuItem mnemonicParsing="false" text="Sauver" />
                <SeparatorMenuItem mnemonicParsing="false" />
                <MenuItem mnemonicParsing="false" onAction="#quit" text="Quitter" />
            </Menu>
            <Menu mnemonicParsing="false" text="Aide">
                <MenuItem mnemonicParsing="false" text="About" />
            </Menu>
        </MenuBar>
    </top>
    <bottom>
        <HBox alignment="CENTER" spacing="8.0" style="-fx-border-color: gray;" BorderPane.alignment="CENTER">
            <Button fx:id="pauseOrResumeButton" mnemonicParsing="false" onAction="#pauseOrResumeGame" text="Lancer" />
            <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopGame" text="Stopper" />
            <Slider fx:id="tickSpeed" blockIncrement="1.0" majorTickUnit="1.0" max="20.0" min="1.0" minorTickCount="0" prefHeight="24.0" prefWidth="256.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="5.0" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="quitButton" mnemonicParsing="false" onAction="#quit" text="Quitter" />
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
        </HBox>
    </bottom>
</fx:root>
